{
  "manifest_version": 3,
  "name": "AI Search Filter",
  "version": "1.0",
  "description": "Uses the declarativeNetRequest API to add '-ai' to Google search queries.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://www.google.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "ruleset/rules.json"
    }]
  },
  "background": {
    "service_worker": "js/service-worker.js",
    "type": "module"
  }
}